<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="OneLogoFixed">
		<control type="fixedlist" id="590">
			<include>contents590list</include>
		</control>
	</include>
	<include name="OneLogoWrap">
		<control type="wraplist" id="590">
			<include>contents590list</include>
		</control>
	</include>

	<include name="contents590list">
		<posx>-277</posx>
		<posy>612</posy>
		<width>2475</width>
		<height>525</height>
		<onleft>590</onleft>
		<onright>590</onright>
		<onup>SetProperty(MediaMenu,True,home)</onup>
		<onup>SetFocus(9050)</onup>
		<ondown>61</ondown>
		<pagecontrol>61</pagecontrol>
		<preloaditems>2</preloaditems>
		<focusposition>2</focusposition>
		<viewtype label="OneLogo">list</viewtype>
		<scrolltime tween="quadratic" easing="out">300</scrolltime>
		<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
		<orientation>horizontal</orientation>
		<itemlayout width="495" height="450">
		</itemlayout>
		<focusedlayout width="495" height="450">
		</focusedlayout>
	</include>

	<include name="View_590_OneLogo">
		<control type="group">
			<visible>Control.IsVisible(590) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<include condition="Skin.HasSetting(HorizontalListNav)">OneLogoFixed</include>
			<include condition="!Skin.HasSetting(HorizontalListNav)">OneLogoWrap</include>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" delay="80" time="40" />
			</animation>
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" delay="80" time="40" />
			</animation>
			<control type="scrollbar" id="61">
				<posx>110</posx>
				<posy>980</posy>
				<width>1680</width>
				<height>12</height>
				<onup>590</onup>
				<ondown>590</ondown>
				<texturesliderbackground border="1">-</texturesliderbackground>
				<texturesliderbar border="6,0,6,0">scrollbar/texturesliderbar_hor.png</texturesliderbar>
				<texturesliderbarfocus border="6,0,6,0">scrollbar/texturesliderbarfocus_hor.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(61) + !Container.Scrolling">Conditional</animation>
			</control>
			<control type="image">
				<left>650</left>
				<top>810</top>
				<width>635</width>
				<height>245</height>
				<aspectratio>keep</aspectratio>
				<texture background="true" fallback="empty.png">$INFO[ListItem.Art(clearlogo)]</texture>
				<fadetime>200</fadetime>
				<animation effect="fade" delay="240" time="240" reversible="false">Hidden</animation>
				<animation effect="fade" delay="160" end="100" time="240" condition="!IsEmpty(Listitem.Art(clearlogo))">Conditional</animation>
				<visible>![Container.OnNext | Container.OnPrevious] + !IsEmpty(Listitem.Art(clearlogo))</visible>
			</control>
			<control type="label">
				<left>650</left>
				<top>810</top>
				<width>635</width>
				<height>245</height>
				<font>font48_title</font>
				<textcolor>white</textcolor>
				<label>$VAR[FloorLabelVar]</label>
				<visible>![Container.OnNext | Container.OnPrevious] + IsEmpty(Listitem.Art(clearlogo))</visible>
			</control>
		</control>
	</include>
</includes>