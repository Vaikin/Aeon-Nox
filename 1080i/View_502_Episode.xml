	<!-- Video Episode -->
	<include name="VideoEpisode">
		<control type="group">
			<visible>Control.IsVisible(502) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<control type="image">
					<posx>50</posx>
					<posy>870</posy>
					<width>390</width>
					<height>164</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
					<visible>!Skin.HasSetting(episodevieworientation)</visible>
				</control>
				<control type="image">
					<posx>1450</posx>
					<posy>870</posy>
					<width>390</width>
					<height>164</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
					<visible>Skin.HasSetting(episodevieworientation)</visible>
				</control>
				<control type="fixedlist" id="502">
					<posx>60</posx>
					<posy>180</posy>
					<width>1820</width>
					<height>780</height>
					<orientation>vertical</orientation>
					<movement>2</movement>
					<focusposition>3</focusposition>
					<onleft>60</onleft>
					<onup>502</onup>
					<ondown>502</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="Episode">list</viewtype>
					<scrolltime tween="quadratic" easing="out">200</scrolltime>
					<visible>Container.Content(episodes)</visible>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(0)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(1)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(2)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(3)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(4)">Conditional</animation>
					<animation effect="slide" end="0,0" time="160" condition="Container(502).Row(5)">Conditional</animation>
					<itemlayout height="100" width="1820" condition="Container.Content(episodes)">
						<include condition="!Skin.HasSetting(episodevieworientation)">EpisodeViewLayout01</include>
						<include condition="Skin.HasSetting(episodevieworientation)">EpisodeViewLayout02</include>
					</itemlayout>
					<focusedlayout height="275" width="1820" condition="Container.Content(episodes)">
						<include condition="!Skin.HasSetting(episodevieworientation)">EpisodeViewLayoutFocus01</include>
						<include condition="Skin.HasSetting(episodevieworientation)">EpisodeViewLayoutFocus02</include>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<posx>-5</posx>
					<posy>180</posy>
					<width>14</width>
					<height>780</height>
					<onup>60</onup>
					<ondown>60</ondown>
					<onleft>SetProperty(MediaMenu,True,home)</onleft>
					<onleft>SetFocus(9050)</onleft>
					<onright>502</onright>
					<texturesliderbackground>-</texturesliderbackground>
					<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
				</control>
			</control>
		</control>
	</include>
</includes>